@model IEnumerable<FancyOnlineStore.Models.ProductViewModel>
<h2>Our hot new collection of @(Model.First().Type)s! Coming soon to a mall near you!</h2>
<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
        @foreach (var product in Model)
        {
            @Html.Partial("_ProductDetails", product)
        }
    </table>
</div>

